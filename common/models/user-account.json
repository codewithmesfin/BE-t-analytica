{
  "name": "UserAccount",
  "base": "User",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": false
  },
  "hidden": [
    "password"
  ],
  "mixins": {
    "TimeStamp": true,
    "SoftDelete": true,
    "RowCount": true
  },
  "protected": [
    "password"
  ],
  "properties": {
    "fullName": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "required": true
    },
    "phoneNo": {
      "type": "string"
    },
    "password": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "accessTokens": {
      "type": "hasMany",
      "model": "CustomAccessToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    },
    "userRole": {
      "type": "belongsTo",
      "model": "UserRole",
      "foreignKey": ""
    },
    "accessories": {
      "type": "hasMany",
      "model": "Accessory",
      "foreignKey": "userAccountId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "registerUser"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW",
      "property": "registerAdmin"
    },
    {
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW",
      "property": "deleteById"
    },
    {
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW",
      "property": "patchAttributes"
    },
    {
      "principalType": "ROLE",
      "principalId": "$admin",
      "permission": "ALLOW",
      "property": "replaceById"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "updatePassword"
    }
  ],
  "methods": {}
}